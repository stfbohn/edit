doctype html
html(lang='fr')
  head
    meta(charset='utf-8')
    title Font picker
    meta(name='description', content='bla bla')
    meta(name='author', content='Steffen Bohn')
    link(rel='stylesheet', type='text/css', href='/stylesheets/font.css')
  body(spellcheck=false)
    include fonttext
    #main
      #top
      #middle
        #left
          +fontbox('header','Header')
          +fontbox('body','Body')
          button.option options
          button.download download
          button.bookm bookmark
        #sample
          +sampletext()
        #right
          +little()
          +little()
          +little()
      #bottom
    script(src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js")
    script(src="/javascripts/font.js")          
    